<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/inicioFragment">
    <fragment
        android:id="@+id/perfilesFragment"
        android:name="com.poli.recetario_uno.PerfilesFragment"
        android:label="PerfilesFragment" />
    <fragment
        android:id="@+id/recetarioFragment"
        android:name="com.poli.recetario_uno.RecetarioFragment"
        android:label="RecetarioFragment" />
    <fragment
        android:id="@+id/inicioFragment"
        android:name="com.poli.recetario_uno.InicioFragment"
        android:label="fragment_inicio"
        tools:layout="@layout/fragment_inicio" >
        <action
            android:id="@+id/action_inicioFragment_to_recetarioFragment"
            app:destination="@id/recetarioFragment" />
        <action
            android:id="@+id/action_inicioFragment_to_menuFragment2"
            app:destination="@id/menuFragment2" />
    </fragment>
    <fragment
        android:id="@+id/menuFragment2"
        android:name="com.poli.recetario_uno.MenuFragment"
        android:label="fragment_menu"
        tools:layout="@layout/fragment_menu" />
    <fragment
        android:id="@+id/webFragment"
        android:name="com.poli.recetario_uno.WebFragment"
        android:label="fragment_web"
        tools:layout="@layout/fragment_web" />
    <fragment
        android:id="@+id/videosFragment"
        android:name="com.poli.recetario_uno.VideosFragment"
        android:label="VideosFragment" />
</navigation>